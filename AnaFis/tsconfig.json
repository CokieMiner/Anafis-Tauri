{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Performance optimizations */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    /* Path mapping for cleaner imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["src/shared/*"],
      "@tabs/*": ["src/tabs/*"],
      "@windows/*": ["src/windows/*"]
    },
    /* Enhanced linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true, // Disabled for performance
    "noUncheckedIndexedAccess": true, // Disabled for performance - causes 10x+ slowdown
    /* Additional type checking */
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "types": ["node", "vite/client"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src-tauri"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}