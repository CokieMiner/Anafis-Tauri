{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "lib": ["ESNext"]
  },
  "include": [
    "vite.config.ts",
    "eslint.config.js",
    "*.config.ts",
    "*.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
